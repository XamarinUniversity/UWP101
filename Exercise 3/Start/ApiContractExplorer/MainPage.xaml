<Page
    x:Class="ApiContractExplorer.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<Grid Margin="10" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>

		<TextBlock Text="{Binding Count}" Margin="10" />
		<ListView ItemsSource="{Binding}" FontSize="12" Grid.Row="1" />

	</Grid>
	
</Page>